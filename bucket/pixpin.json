{
    "version": "1.8.22.0",
    "description": "PixPin - 功能强大的截图、贴图和图片管理工具",
    "homepage": "https://pixpinapp.com/",
    "license": "Freeware",
    "notes": [
        "快捷键:",
        "- Win+Shift+P: 截图",
        "- Win+Shift+O: 贴图",
        "- Win+Shift+H: 历史记录"
    ],
    "architecture": {
        "64bit": {
            "url": "https://download.pixpinapp.com/PixPin_1.8.22.0.exe",
            "hash": "e1b3f45b6d3c54266684d0e787af18cc0816a115dbcd63ad4162f256fd6ab979"
        }
    },
    "innosetup": true,
    "bin": "PixPin.exe",
    "shortcuts": [
        [
            "PixPin.exe",
            "PixPin",
            "",
            "PixPin.exe"
        ]
    ],
    "post_install": [
        "if (!(Test-Path \"$dir\\Config\")) { New-Item \"$dir\\Config\" -Type Directory | Out-Null }",
        "if (!(Test-Path \"$dir\\Config\\config.json\")) {",
        "    $config = @{",
        "        'System.Update.AutoCheckUpdate' = @{",
        "            'subConf' = @{",
        "                'checkBeta' = $false",
        "            }",
        "            'value' = $false",
        "        }",
        "    }",
        "    $config | ConvertTo-Json -Depth 10 | Set-Content -Path \"$dir\\Config\\config.json\" -Encoding UTF8",
        "}"
    ],
    "persist": [
        "History",
        "Data", 
        "Config"
    ],
    "checkver": {
        "url": "https://pixpinapp.com/",
        "regex": "PixPin_([\\d.]+)\\.exe"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://download.pixpinapp.com/PixPin_$version.exe"
            }
        }
    }
}
